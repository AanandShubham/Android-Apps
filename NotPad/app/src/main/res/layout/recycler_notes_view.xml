<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="5.5dp"
    android:padding="10dp"
    android:layout_height="wrap_content"
    android:id="@+id/recyclerMainViewLayout">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_recycler_Notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="7dp"
        android:padding="10dp"
        app:cardBackgroundColor="@color/white"
        android:background="@color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/img_btn_hide_Recycle_notes"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/save_text"
                android:background="@drawable/hide_note_icon"
                android:layout_marginEnd="50dp"
                tools:ignore="RelativeOverlap" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/img_btn_close_Recycle_notes"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/save_text"
                android:background="@drawable/recycler_notes_delete_icon"
                android:layout_marginEnd="10dp"
                tools:ignore="RelativeOverlap" />
            <EditText
                android:id="@+id/edt_title_Recycle_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:textSize="20sp"
                android:paddingStart="5dp"
                android:layout_alignParentStart="true"
                android:minWidth="200dp"
                android:maxWidth="300sp"
                android:enabled="false"
                android:editable="false"
                android:textColor="@color/white"
                android:backgroundTint="@android:color/transparent"
                tools:ignore="LabelFor,RelativeOverlap,RtlSymmetry" />
            <EditText
                android:id="@+id/edt_note_Recycle_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:autofillHints=""
                android:textColor="@color/white"
                android:enabled="false"
                android:editable="false"
                android:backgroundTint="@android:color/transparent"
                android:layout_below="@+id/edt_title_Recycle_notes"
                tools:ignore="LabelFor" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>