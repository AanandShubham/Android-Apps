<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="5.5dp"
    android:background="#996AE6"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_recycler_Notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="11dp"
        app:cardElevation="7dp"
        android:layout_marginStart="8.2dp"
        app:cardBackgroundColor="@color/white"
        android:background="@color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/img_btn_close_Recycle_notes"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/save_text"
                android:background="@drawable/recycler_notes_delete_icon"
                android:padding="5dp"
                tools:ignore="RelativeOverlap" />

            <EditText
                android:id="@+id/edt_title_Recycle_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:autofillHints=""
                android:backgroundTint="@android:color/transparent"
                android:enabled="false"
                android:inputType="text"
                android:minWidth="200dp"
                android:paddingStart="5dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="LabelFor,RelativeOverlap,RtlSymmetry" />

            <EditText
                android:id="@+id/edt_note_Recycle_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:autofillHints=""
                android:textColor="@color/white"
                android:inputType="textMultiLine"
                android:enabled="false"
                android:backgroundTint="@android:color/transparent"
                android:layout_below="@+id/edt_title_Recycle_notes"
                tools:ignore="LabelFor" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>